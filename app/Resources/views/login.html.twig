{% extends 'template.html.twig' %}{# empty Twig template #}
{% block main %}
    <div class="column-wrapper">
    <div class="title-container">
        {% if error %}
            <div class="dialog" title="Echec de la connexion">
                <span>Le mot de passe et le nom d'utilisateur renseign√©s ne correspondent pas.</span>
            </div>
        {% endif %}
        <h1 class="logo signup darkgreen">Connexion</h1>
    </div>
    <form class="column-wrapper" method="post" action={{ path('login') }}>
        <div class="labeled_input-container">
            <label for='_username' class="legend">Nom d'utilisateur ou email :</label>
            <input type="text" name="_username" required/>
        </div>
        <div class="labeled_input-container">
            <label for='_password' class="legend">Mot de passe :</label>
            <input type="password" name="_password" required />
        </div>
        {#<div class="keeplogged">
            <input type="checkbox" name="_remember_me" checked />
            <label for="_remember_me"><span></span>Souvenez-vous de moi!</label>
        </div>#}
        <div class="keeplogged">
        <input class="css-checkbox" name="_remember_me" type="checkbox" id="checkbox1" />
        <label class="css-label" for="_remember_me">Souvenez-vous de moi!</label>
        </div>
        <div class="subtmit-container">
            <button class="inputfont" type="submit">Se connecter!</button>
        </div>
    </form>
</div>
{% endblock %}